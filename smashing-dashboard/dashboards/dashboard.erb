      <div data-id="humidity-cellar" data-view="Meter" data-title="Humidity Cellar" data-height="200" data-width="200" data-min="0" data-max="100" data-suffix="%"></div>
    </li>
    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="temperature-cellar" data-view="Number" data-title="Temperature Cellar" data-height="200" data-width="200" data-suffix="°C"></div>
